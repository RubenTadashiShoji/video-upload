<h1>Login</h1>

<div>
    <div>
        <%= form_for(:session, url: login_path) do |f| %>
            
            <% if !flash.empty? %>
                <div id="flash"> 
                    <% flash.keys.each do |k| %> 
                        <div class="<%= k %>">
                        <%= flash[k] %>
                        </div>  
                    <% end %>   
                </div>
            <% end %>
            
            <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email,PlaceHOLDER:'EMAIL' %>
            </div>
            
            <div class="field">

                <%= f.label :password %>
                <%= f.password_field :password,PlaceHOLDER:'CONFIRM PASSWORD' %>
              <div class="forgotbtn"><%= link_to "(forgot password)", new_password_reset_path %></div>
            </div>
            
            <div class="field" style="width:100%">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
              <% end %>
          </div>
            
              <div class="actions">
                <%= f.submit "Login" %>
              </div>
        <% end %>
        
        <div class="signupnow">New user? <%= link_to "Sign up now!", signup_path %></div>
    </div>
</div>